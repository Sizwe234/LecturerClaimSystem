<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Lecturer Claim System</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-light">

    <header class="bg-dark text-white py-3">
        <div class="container d-flex flex-wrap align-items-center justify-content-between">
            <h1 class="h4 m-0">Lecturer Claim System</h1>
            <nav class="d-flex gap-2">
                <a class="btn btn-outline-light" asp-controller="Lecturer" asp-action="Dashboard">Lecturer dashboard</a>
                <a class="btn btn-outline-warning" asp-controller="Lecturer" asp-action="Submit">Submit claim</a>
                <a class="btn btn-outline-info" asp-controller="Coordinator" asp-action="Index">Coordinator view</a>
                <a class="btn btn-outline-success" asp-controller="Manager" asp-action="Index">Manager view</a>
            </nav>
        </div>
    </header>

    <main class="container my-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @RenderBody()
    </main>

    <footer class="bg-white border-top py-3">
        <div class="container text-muted small">
            &copy; @DateTime.Now.Year Lecturer Claim System
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>