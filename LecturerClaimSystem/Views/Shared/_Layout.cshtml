<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - LecturerClaimSystem</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background: url('/images/background.jpg') no-repeat center center fixed;
             background-size: cover;
             min-height: 100vh;">

    <header class="app-header text-center py-4 bg-dark bg-opacity-75 text-white shadow">
        <h1 class="display-4 fw-bold">Lecturer Claim System</h1>
        <p class="lead fw-semibold text-warning tagline">
            Manage, verify, and approve lecturer claims seamlessly
        </p>
        <nav class="mt-3">
            <a class="btn btn-light fw-bold text-dark me-2 shadow-sm" asp-controller="Books" asp-action="Index">
                Lecturer: My Claims
            </a>
            <a class="btn btn-info fw-bold text-white shadow-sm" asp-controller="Admin" asp-action="Index">
                Admin Dashboard
            </a>
        </nav>
    </header>

    <main class="container bg-white bg-opacity-90 p-4 rounded shadow mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">@TempData["Error"]</div>
        }

        @RenderBody()
    </main>

    <footer class="app-footer text-center py-3 mt-4 bg-dark text-white-50">
        <p>&copy; @DateTime.Now.Year Lecturer Claim System</p>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>