@model IEnumerable<LecturerClaimSystem.Models.AppUser>
@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-3">HR Dashboard</h2>
    <p class="text-muted">Manage users and assign roles.</p>

    <a class="btn btn-primary mb-3" asp-action="Create">Create New User</a>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Hourly Rate</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName @user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.HourlyRate</td>
                    <td>
                        <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-id="@user.Id">Edit</a>
                        <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure you want to delete this user?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>