@model IEnumerable<LecturerClaimSystem.Models.Claim>
@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mb-5">
    <h2 class="display-5 fw-bold">Admin Dashboard</h2>
    <p class="lead">Track, verify, and approve lecturer claims</p>
</div>

<div class="row text-center mb-4">
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Pending</h5>
                <span class="badge bg-warning text-dark fs-4">@ViewBag.PendingCount</span>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Verified</h5>
                <span class="badge bg-info text-dark fs-4">@ViewBag.VerifiedCount</span>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Approved</h5>
                <span class="badge bg-success fs-4">@ViewBag.ApprovedCount</span>
            </div>
        </div>
    </div>
    <div class="col">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title">Declined</h5>
                <span class="badge bg-danger fs-4">@ViewBag.DeclinedCount</span>
            </div>
        </div>
    </div>
</div>

<div class="card shadow">
    <div class="card-header bg-dark text-white">
        <h4>All Claims</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Lecturer</th>
                        <th>Hours</th>
                        <th>Status</th>
                        <th>Submitted</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model)
                    {
                        <tr>
                            <td>@claim.LecturerName</td>
                            <td>@claim.HoursWorked</td>
                            <td><span class="badge bg-secondary">@claim.Status</span></td>
                            <td>@claim.SubmittedDate.ToShortDateString()</td>
                            <td><a asp-action="Review" asp-route-id="@claim.Id" class="btn btn-sm btn-outline-primary">Review</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>