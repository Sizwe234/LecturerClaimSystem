@model LecturerClaimSystem.Models.Claim
@{
    ViewBag.Title = "Review Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Review Claim</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Lecturer:</strong> @Model.LecturerName</p>
        <p><strong>Email:</strong> @Model.LecturerEmail</p>
        <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
        <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
        <p><strong>Total Earnings:</strong> @Model.CalculateEarnings()</p>
        <p><strong>Status:</strong> <span class="badge bg-secondary">@Model.Status</span></p>

        @{
            int progress = Model.Status switch
            {
                LecturerClaimSystem.Models.ClaimStatus.Pending => 25,
                LecturerClaimSystem.Models.ClaimStatus.Verified => 50,
                LecturerClaimSystem.Models.ClaimStatus.Approved => 100,
                LecturerClaimSystem.Models.ClaimStatus.Declined => 100,
                _ => 0
            };
            var barClass = Model.Status == LecturerClaimSystem.Models.ClaimStatus.Approved ? "bg-success"
            : Model.Status == LecturerClaimSystem.Models.ClaimStatus.Verified ? "bg-info"
            : Model.Status == LecturerClaimSystem.Models.ClaimStatus.Declined ? "bg-danger"
            : "bg-warning";
        }
        <div class="progress mb-3">
            <div class="progress-bar @barClass" role="progressbar" style="width: @progress%"></div>
        </div>

        <form asp-action="Verify" method="post" class="mb-2">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="input-group">
                <input type="text" name="comments" placeholder="Optional verification note" class="form-control" />
                <button type="submit" class="btn btn-info">Verify (Coordinator)</button>
            </div>
        </form>

        <form asp-action="Approve" method="post" class="mb-2">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="input-group">
                <input type="text" name="comments" placeholder="Optional approval note" class="form-control" />
                <button type="submit" class="btn btn-success">Approve (Manager)</button>
            </div>
        </form>

        <form asp-action="Decline" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <div class="input-group">
                <input type="text" name="comments" placeholder="Reason for decline (required)" class="form-control" />
                <button type="submit" class="btn btn-danger">Decline (Manager)</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <h5>Supporting documents</h5>
    @if (Model.Documents?.Count > 0)
    {
        <ul class="list-group">
            @foreach (var d in Model.Documents)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    @d.FileName
                    <a class="btn btn-sm btn-outline-primary" href="~/@d.StoredPath" target="_blank">Open</a>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No supporting documents uploaded.</p>
    }
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Back to Dashboard</a>