@model IEnumerable<LecturerClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Manager Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-3">Manager Dashboard</h2>
    <p class="text-muted">Approve or decline verified claims for payment.</p>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Lecturer</th>
                <th>Email</th>
                <th>Hours</th>
                <th>Rate</th>
                <th>Earnings</th>
                <th>Notes</th>
                <th>Verified Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.LecturerName</td>
                    <td>@claim.LecturerEmail</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.CalculateEarnings()</td>
                    <td>@claim.Notes</td>
                    <td>@claim.ReviewedDate?.ToString("yyyy-MM-dd")</td>
                    <td><span class="badge bg-info text-dark">@claim.Status</span></td>
                    <td>
                        <form asp-action="Approve" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@claim.Id" />
                            <button class="btn btn-sm btn-success">Approve</button>
                        </form>
                        <form asp-action="Decline" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@claim.Id" />
                            <input type="text" name="comments" placeholder="Reason" class="form-control form-control-sm d-inline w-auto" />
                            <button class="btn btn-sm btn-danger">Decline</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>