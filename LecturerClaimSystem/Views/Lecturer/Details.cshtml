@model LecturerClaimSystem.Models.Claim
@{
    ViewBag.Title = "Claim Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Claim Details</h2>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>Lecturer:</strong> @Model.LecturerName</p>
        <p><strong>Email:</strong> @Model.LecturerEmail</p>
        <p><strong>Hours Worked:</strong> @Model.HoursWorked</p>
        <p><strong>Hourly Rate:</strong> @Model.HourlyRate</p>
        <p><strong>Total Earnings:</strong> @Model.CalculateEarnings()</p>
        <p><strong>Status:</strong> <span class="badge bg-secondary">@Model.Status</span></p>

        @{
            int progress = 0;
            string barClass = "bg-warning";

            switch (Model.Status)
            {
                case LecturerClaimSystem.Models.ClaimStatus.Pending:
                    progress = 25;
                    barClass = "bg-warning";
                    break;
                case LecturerClaimSystem.Models.ClaimStatus.Verified:
                    progress = 50;
                    barClass = "bg-info";
                    break;
                case LecturerClaimSystem.Models.ClaimStatus.Approved:
                    progress = 100;
                    barClass = "bg-success";
                    break;
                case LecturerClaimSystem.Models.ClaimStatus.Declined:
                    progress = 100;
                    barClass = "bg-danger";
                    break;
                default:
                    progress = 0;
                    barClass = "bg-warning";
                    break;
            }
        }

        <div class="mb-2">
            <label class="form-label"><strong>Status progress</strong></label>
            <div class="progress">

                <div class="progress-bar @barClass" role="progressbar" style="width:@(progress + "%");">
                </div>
            </div>
        </div>

        <p><strong>Notes:</strong> @Model.Notes</p>
        <p><strong>Submitted:</strong> @Model.SubmittedDate</p>
    </div>
</div>

<h4>Supporting documents</h4>
@if (Model.Documents?.Count > 0)
{
    <ul class="list-group mb-3">
        @foreach (var d in Model.Documents)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @d.FileName
                <a class="btn btn-sm btn-outline-primary"
                   asp-controller="Claims"
                   asp-action="DownloadDocument"
                   asp-route-claimId="@Model.Id"
                   asp-route-documentId="@d.Id">Open</a>
            </li>
        }
    </ul>
}
else
{
    <p>No supporting documents uploaded.</p>
}

<h4>Review history</h4>
@if (Model.Reviews?.Count > 0)
{
    <div class="table-responsive">
        <table class="table table-sm">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Reviewer</th>
                    <th>Role</th>
                    <th>Decision</th>
                    <th>Comments</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var r in Model.Reviews)
                {
                    <tr>
                        <td>@r.ReviewDate</td>
                        <td>@r.ReviewerName</td>
                        <td>@r.ReviewerRole</td>
                        <td>@r.Decision</td>
                        <td>@r.Comments</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <p>No reviews yet.</p>
}

<a asp-action="Upload" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Upload Document</a>
<a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>