@model IEnumerable<LecturerClaimSystem.Models.Claim>
@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<div class="container mt-4">
    <h2 class="mb-3">Lecturer Dashboard</h2>
    <p class="text-muted">View and track your submitted claims.</p>

    <a class="btn btn-success mb-3" asp-action="Submit">Submit New Claim</a>

    <table class="table table-striped table-bordered shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Submitted Date</th>
                <th>Hours Worked</th>
                <th>Rate</th>
                <th>Earnings</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var claim in Model)
            {
                <tr>
                    <td>@claim.SubmittedDate.ToString("yyyy-MM-dd")</td>
                    <td>@claim.HoursWorked</td>
                    <td>@claim.HourlyRate</td>
                    <td>@claim.CalculateEarnings()</td>
                    <td>
                        @switch (claim.Status)
                        {
                            case LecturerClaimSystem.Models.ClaimStatus.Pending:
                                <span class="badge bg-warning text-dark">Pending</span>
                                ; break;
                            case LecturerClaimSystem.Models.ClaimStatus.Verified:
                                <span class="badge bg-info text-dark">Verified</span>
                                ; break;
                            case LecturerClaimSystem.Models.ClaimStatus.Approved:
                                <span class="badge bg-success">Approved</span>
                                ; break;
                            case LecturerClaimSystem.Models.ClaimStatus.Declined:
                                <span class="badge bg-danger">Declined</span>
                                ; break;
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@claim.Id">Details</a>
                        <a class="btn btn-sm btn-secondary" asp-action="ReviewHistory" asp-route-id="@claim.Id">History</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>