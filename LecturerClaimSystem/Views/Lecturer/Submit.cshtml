@model LecturerClaimSystem.Models.Claim
@{
    ViewData["Title"] = "Submit Claim";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-success text-white">
                    Submit Lecturer Claim
                </div>
                <div class="card-body">
                    <form asp-action="Submit" method="post" enctype="multipart/form-data">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label asp-for="LecturerName" class="form-label"></label>
                            <input asp-for="LecturerName" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="LecturerEmail" class="form-label"></label>
                            <input asp-for="LecturerEmail" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="HoursWorked" class="form-label"></label>
                            <input asp-for="HoursWorked" class="form-control" />
                            <span asp-validation-for="HoursWorked" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HourlyRate" class="form-label"></label>
                            <input asp-for="HourlyRate" class="form-control" readonly />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control"></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Attach Document (optional)</label>
                            <input type="file" name="upload" class="form-control" />
                            <small class="text-muted">Allowed: .pdf, .docx, .xlsx, .jpg, .jpeg, .png (max 10MB)</small>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Submit Claim</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>