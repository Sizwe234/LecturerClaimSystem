@model LecturerClaimSystem.Models.Claim
@{
    ViewBag.Title = "Submit claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3 text-primary">Submit a claim</h2>
<p class="text-muted">Your name and hourly rate are set by HR. Enter hours and upload documents.</p>

<form asp-action="Submit" method="post" enctype="multipart/form-data" class="card shadow-sm">
    @Html.AntiForgeryToken()
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label class="form-label fw-bold">Lecturer name</label>
                <input class="form-control" value="@Model?.LecturerName" readonly />
            </div>

            <div class="col-md-6">
                <label class="form-label fw-bold">Lecturer email</label>
                <input class="form-control" value="@Model?.LecturerEmail" readonly />
            </div>

            <div class="col-md-4">
                <label asp-for="HoursWorked" class="form-label fw-bold">Hours worked</label>
                <input asp-for="HoursWorked" class="form-control" id="hours" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
                <div class="form-text">Maximum 180 hours per month.</div>
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Hourly rate</label>
                <input class="form-control bg-light" id="rate" value="@Model?.HourlyRate" readonly />
            </div>

            <div class="col-md-4">
                <label class="form-label fw-bold">Auto calculation</label>
                <input class="form-control bg-light" id="total" value="@(Model?.HoursWorked * Model?.HourlyRate)" readonly />
            </div>

            <div class="col-12">
                <label class="form-label fw-bold">Supporting documents</label>
                <input type="file" name="upload" class="form-control" accept=".pdf,.doc,.docx,.jpg,.jpeg,.png" multiple />
                <div class="form-text">Upload your documents here (PDF, DOC, JPG, PNG).</div>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" id="terms" />
                    <label class="form-check-label" for="terms">
                        I confirm that the above information is correct and upload the necessary documents.
                    </label>
                </div>
                <span asp-validation-summary="ModelOnly" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="card-footer">
        <div class="d-flex justify-content-between">
            <a asp-action="Dashboard" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-check-circle"></i> Submit claim
            </button>
        </div>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function () {
            $('#hours').on('input', function () {
                var hours = $(this).val();
                var rate = $('#rate').val();
                var total = hours * rate;
                $('#total').val(total);
            });
        });
    </script>
}