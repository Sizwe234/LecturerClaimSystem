@model LecturerClaimSystem.Models.Claim
@{
    ViewBag.Title = "Submit Claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Submit Claim</h2>

<form asp-action="Submit" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="LecturerName" class="form-label">Lecturer Name</label>
        <input asp-for="LecturerName" class="form-control" />
        <span asp-validation-for="LecturerName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LecturerEmail" class="form-label">Lecturer Email</label>
        <input asp-for="LecturerEmail" type="email" class="form-control" />
        <span asp-validation-for="LecturerEmail" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HoursWorked" class="form-label">Hours Worked</label>
        <input asp-for="HoursWorked" type="number" step="0.25" class="form-control" />
        <span asp-validation-for="HoursWorked" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HourlyRate" class="form-label">Hourly Rate</label>
        <input asp-for="HourlyRate" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="HourlyRate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Notes" class="form-label">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <div class="mb-3">
        <label class="form-label">Upload supporting document (PDF, DOCX, XLSX; max 10 MB)</label>
        <input type="file" name="upload" class="form-control" accept=".pdf,.docx,.xlsx" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}