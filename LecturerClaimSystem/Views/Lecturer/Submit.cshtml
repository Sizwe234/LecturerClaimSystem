@model LecturerClaimSystem.Models.Claim
@{
    ViewBag.Title = "Submit claim";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="mb-3">Submit a claim</h2>
<p class="text-muted">Enter hours, rate, optional notes, and upload supporting document(s).</p>

<form asp-action="Submit" method="post" enctype="multipart/form-data" class="card">
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="LecturerName" class="form-label">Lecturer name</label>
                <input asp-for="LecturerName" class="form-control" />
                <span asp-validation-for="LecturerName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="LecturerEmail" class="form-label">Lecturer email</label>
                <input asp-for="LecturerEmail" class="form-control" />
                <span asp-validation-for="LecturerEmail" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="HoursWorked" class="form-label">Hours worked</label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label asp-for="HourlyRate" class="form-label">Hourly rate</label>
                <input asp-for="HourlyRate" class="form-control" />
                <span asp-validation-for="HourlyRate" class="text-danger"></span>
            </div>

            <div class="col-md-4">
                <label class="form-label">Auto calculation</label>
                <input class="form-control" value="@(Model.HoursWorked* Model.HourlyRate)" readonly />
            </div>

            <div class="col-12">
                <label asp-for="Notes" class="form-label">Additional notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
            </div>

            <div class="col-12">
                <label class="form-label">Upload supporting document (PDF/DOCX/XLSX)</label>
                <input type="file" name="upload" class="form-control" />
                <div class="form-text">
                    Max 10 MB. Allowed types: .pdf, .docx, .xlsx. Securely stored with encryption.
                </div>
            </div>
        </div>
    </div>
    <div class="card-footer d-flex gap-2">
        <button type="submit" class="btn btn-primary">Submit claim</button>
        <a asp-action="Dashboard" class="btn btn-outline-secondary">Back to dashboard</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}